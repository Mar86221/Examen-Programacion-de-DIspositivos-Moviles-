<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.partidotracker.ui.partido.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_newPartidoFragment"
            app:destination="@id/newPartidoFragment" />
        <action
            android:id="@+id/action_homeFragment_to_partidoFragment"
            app:destination="@id/partidoFragment" />
    </fragment>
    <fragment
        android:id="@+id/newPartidoFragment"
        android:name="com.example.partidotracker.ui.partido.NewPartidoFragment"
        android:label="fragment_new_partido"
        tools:layout="@layout/fragment_new_partido" >
        <action
            android:id="@+id/action_newPartidoFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/partidoFragment"
        android:name="com.example.partidotracker.ui.partido.PartidoFragment"
        android:label="fragment_partido"
        tools:layout="@layout/fragment_partido" >
        <action
            android:id="@+id/action_partidoFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>